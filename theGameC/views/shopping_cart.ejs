    // ----------------以下為最上方step的設定---------------
    // 取得所有的 <div> 元素
      <script>
    const stepDivs = document.querySelectorAll('.thestepbox > div');

    // 為每個 <div> 元素添加滑鼠懸停事件監聽器
    stepDivs.forEach((div) => {
      div.addEventListener('mouseenter', () => {
        const h3 = div.querySelector('h3');
        const p = div.querySelector('.thestepcontent');

        // 將 <h3> 元素往上滑動到 <div> 的最上方
        h3.style.transform = 'translateY(-100%)';

        // 顯示 <p> 元素在 <h3> 的正下方
        p.style.display = 'block';
        p.style.marginTop = '-12px';
        p.style.transform = 'translateY(-60)';

        // 增加 <div> 元素的高度
        div.style.height = `${div.offsetHeight + 20}px`;
      });

      // 滑鼠離開時恢復原來的位置和樣式
      div.addEventListener('mouseleave', () => {
        const h3 = div.querySelector('h3');
        const p = div.querySelector('.thestepcontent');

        // 將 <h3> 元素恢復到原來的位置
        h3.style.transform = 'none';

        // 隱藏 <p> 元素
        p.style.display = 'none';
        p.style.marginTop = '0';
        p.style.transform = 'none';

        // 恢復 <div> 元素的原始高度
        div.style.height = '';
      });
    });

  </script>



